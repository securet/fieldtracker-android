<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/colorLoginButton"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:textColor="@color/colorWhite"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_3"
            android:background="@drawable/oppologowhite"
            android:contentDescription="@string/oppo_logo"
            android:padding="@dimen/margin_5"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_10"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_27" />

        <EditText
            android:id="@+id/domain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_marginRight="@dimen/margin_25"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@drawable/login_edittext"
            android:drawableEnd="@drawable/domain"
            android:drawableRight="@drawable/domain"
            android:hint="Domain"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/margin_5"
            android:paddingStart="@dimen/margin_5"
            android:textSize="@dimen/text_20" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/emailET"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_25"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/login_edittext"
                android:drawableEnd="@drawable/email2"
                android:drawableRight="@drawable/email2"
                android:hint="@string/username_hint"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/margin_5"
                android:paddingStart="@dimen/margin_5"
                android:textSize="@dimen/text_20" />

            <EditText
                android:id="@+id/passwordET"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailET"
                android:layout_marginBottom="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_25"
                android:background="@drawable/login_edittext"
                android:drawableEnd="@drawable/pass"
                android:drawableRight="@drawable/pass"
                android:fontFamily=""
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/margin_5"
                android:paddingStart="@dimen/margin_5"
                android:textSize="@dimen/text_20" />

            <EditText
                android:id="@+id/etNewPass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_25"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/login_edittext"
                android:drawableEnd="@drawable/pass"
                android:drawableRight="@drawable/pass"
                android:fontFamily=""
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/margin_5"
                android:paddingStart="@dimen/margin_5"
                android:textSize="@dimen/text_20"
                android:textStyle="italic"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/etConfirmPass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etNewPass"
                android:layout_marginBottom="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_25"
                android:background="@drawable/login_edittext"
                android:drawableEnd="@drawable/pass"
                android:drawableRight="@drawable/pass"
                android:fontFamily=""
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/margin_5"
                android:paddingStart="@dimen/margin_5"
                android:textSize="@dimen/text_20"
                android:textStyle="italic"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvForgotPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center_horizontal"
            android:text="@string/forgot_password"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_button"
                android:paddingLeft="@dimen/margin_70"
                android:paddingRight="@dimen/margin_70"
                android:text="@string/login_text"
                android:textAllCaps="true"
                android:textColor="@color/colorLoginButton"
                android:textSize="@dimen/text_27" />

            <Button
                android:id="@+id/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:paddingLeft="@dimen/margin_70"
                android:paddingRight="@dimen/margin_70"
                android:text="@string/reset"
                android:textAllCaps="true"
                android:textColor="@color/colorLoginButton"
                android:textSize="@dimen/text_27"
                android:visibility="invisible" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPoweredBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/powered_by"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_16" />

        <ImageView
            android:id="@+id/ivAllSmartLogo"
            android:layout_width="@dimen/margin_130"
            android:layout_height="@dimen/margin_20"
            android:contentDescription="@string/allsmart_logo"
            android:src="@drawable/allsmartmainlogo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_20">

    </LinearLayout>
</LinearLayout>