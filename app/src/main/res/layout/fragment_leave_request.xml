<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="Leave Request"/>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvStart"
            android:layout_width="wrap_content"
            android:text="Start"
            android:layout_marginTop="2dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@android:drawable/ic_dialog_dialer"
            android:id="@+id/ivDatePicker"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <EditText
            android:id="@+id/etStartDate"
            android:layout_width="wrap_content"
            android:paddingTop="3dp"
            android:paddingRight="25dp"
            android:paddingBottom="3dp"
            android:text="11/10/2016"
            android:layout_toLeftOf="@id/ivDatePicker"
            android:background="@drawable/leave_request_edittext"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvEnd"
            android:layout_width="wrap_content"
            android:text="End"
            android:layout_marginTop="2dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@android:drawable/ic_dialog_dialer"
            android:id="@+id/ivDatePicker2"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <EditText
            android:id="@+id/etEndDate"
            android:layout_width="wrap_content"
            android:paddingTop="3dp"
            android:paddingRight="25dp"
            android:paddingBottom="3dp"
            android:text="11/10/2016"
            android:layout_toLeftOf="@id/ivDatePicker2"
            android:background="@drawable/leave_request_edittext"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvDays"
            android:layout_width="wrap_content"
            android:text="Day(s)"

            android:layout_marginTop="2dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="3"
            android:textSize="23sp"
            android:paddingRight="165dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:text="Type"
            android:layout_marginTop="2dp"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etType"
            android:layout_width="178dp"
            android:paddingTop="3dp"
            android:paddingRight="25dp"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:paddingBottom="3dp"
            android:text="Casual"
            android:layout_alignParentRight="true"
            android:background="@drawable/leave_request_edittext"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/etReason"
            android:layout_width="match_parent"
            android:hint="Reason"
            android:textStyle="italic"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="Submit"
            android:textAllCaps="false"
            android:background="@drawable/editstore_edit_button"
            android:textSize="22sp"
            android:textColor="@color/colorWhite"
            android:layout_width="150dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_height="wrap_content" />
        <Button
            android:text="Cancel"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textAllCaps="false"
            android:background="@drawable/editstore_cancel_button"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>