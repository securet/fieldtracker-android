<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorLightGray"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLeaveStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/agentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_23"
            android:layout_marginTop="@dimen/margin_5"
            android:textColor="@android:color/black"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:text="Agent Name"/>
        <TextView
            android:id="@+id/leaveFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_20"
            android:layout_marginTop="@dimen/margin_5"
            android:textColor="@android:color/black"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:text="From: 11/10/2016"/>
        <TextView
            android:id="@+id/leaveTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_20"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:text="To: 14/10/2016"
            android:layout_marginBottom="@dimen/margin_10"/>


    </LinearLayout>

    <TextView
        android:id="@+id/leaveDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_23"
        android:layout_marginEnd="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_5"
        android:textColor="@android:color/black"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        android:text="4 Days"/>

    <TextView
        android:id="@+id/leaveStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_50"
        android:layout_marginEnd="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:text="Pending"
        android:textSize="@dimen/text_25" />

    <TextView
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_2"
        android:layout_below="@id/linearHistory" />
</RelativeLayout>
