<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTimeInElement"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/history_time_in_element_red"/>
    <TextView
        android:id="@+id/tvTimeInTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:45am"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tvTimeInElement"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_toRightOf="@id/tvTimeInTime"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="|   Time In"/>

</RelativeLayout>