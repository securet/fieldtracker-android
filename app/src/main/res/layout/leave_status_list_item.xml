<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLeaveStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvLeaveDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="4 Days"/>
        <TextView
            android:id="@+id/tvLeaveFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="From: 11/10/2016"/>
        <TextView
            android:id="@+id/tvLeaveTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="To: 14/10/2016"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>


    <TextView
        android:id="@+id/tvLeaveStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="Pending"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/tvLeaveReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tvLeaveStatus"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="Casual Leave"/>
    <TextView
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/linearHistory" />
</RelativeLayout>
