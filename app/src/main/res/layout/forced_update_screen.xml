<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/text_20">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_20"
        android:text="New Version Available"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/text_20"/>

    <Button
        android:id="@+id/forcedUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update"
        android:textAllCaps="false"
        android:textSize="@dimen/text_23"
        android:textColor="@color/colorWhite"
        android:background="@drawable/editstore_edit_button"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>