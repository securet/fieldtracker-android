<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"


    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvPromoterItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rahul Kumar"
        android:textColor="@android:color/black"
        android:paddingLeft="@dimen/margin_10"
        android:paddingStart="@dimen/margin_10"
        android:textSize="@dimen/text_20"
        android:layout_margin="@dimen/margin_5"/>
    <TextView
        android:id="@+id/pStoreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_5"
        android:paddingLeft="@dimen/margin_15"
        android:text="store name"
        android:paddingStart="@dimen/margin_15"
        android:textSize="@dimen/text_14"
        android:layout_below="@id/tvPromoterItem"
        />
    <TextView
        android:id="@+id/tvStatusId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_16"
        android:layout_centerVertical="true"
        android:text="status"
        android:drawableRight="@drawable/bluerightarrow"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_marginStart="@dimen/margin_15"
        android:background="@color/colorDarkGray"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginEnd="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_below="@id/pStoreName"/>




</RelativeLayout>