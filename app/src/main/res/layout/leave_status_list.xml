<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:layout_margin="15dp"
            android:id="@+id/tvLeaveStatus"
            android:text="@string/leave_status"/>

        <Button
            android:id="@+id/btLeaveRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_request"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/editstore_edit_button"
            android:textColor="@color/colorWhite"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ListView
        android:background="#eceae8"
        android:id="@+id/lvLeaveStatus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

    </ListView>
</LinearLayout>