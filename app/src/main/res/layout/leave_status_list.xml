<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_23"
            android:layout_margin="@dimen/margin_15"
            android:id="@+id/tvLeaveStatus"
            android:text="@string/leave_status"/>

        <Button
            android:id="@+id/btLeaveRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_request"
            android:textAllCaps="false"
            android:textSize="@dimen/text_16"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_10"
            android:background="@drawable/editstore_edit_button"
            android:textColor="@color/colorWhite"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ListView
        android:background="#eceae8"
        android:id="@+id/lvLeaveStatus"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>