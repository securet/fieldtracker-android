<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvStoreAssignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_20"
        android:textStyle="italic"
        android:padding="@dimen/margin_10"
        android:hint="@string/store_assignment"
        android:textColor="@android:color/black"
        android:background="@drawable/edittext_editstore_item"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_10"
        android:textSize="@dimen/text_20" />
    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/tvSEAssignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginStart="@dimen/margin_20"
        android:gravity="center_vertical"
        android:hint="@string/se_assignment"
        android:textStyle="italic"
        android:padding="@dimen/margin_10"
        android:background="@drawable/edittext_editstore_item"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_10"
        android:textSize="@dimen/text_20"
        />
    <TextView
        android:textStyle="italic"
        android:textSize="@dimen/text_20"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginStart="@dimen/margin_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weekly_off"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_7"
        android:layout_marginStart="@dimen/margin_7"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginBottom="@dimen/margin_10"
        android:gravity="center_horizontal|center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="@dimen/margin_45"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/checkboxM"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:layout_marginLeft="@dimen/margin_8"
                android:textSize="@dimen/text_18"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="@dimen/margin_45"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/checkboxTue"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T"
                android:layout_marginLeft="@dimen/margin_8"
                android:textSize="@dimen/text_18"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/margin_45"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/checkboxW"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W"
                android:layout_marginLeft="@dimen/margin_8"
                android:textSize="@dimen/text_18"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/margin_45"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/checkboxThu"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T"
                android:layout_marginLeft="@dimen/margin_8"
                android:textSize="@dimen/text_18"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/margin_45"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/checkboxF"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                android:layout_marginLeft="@dimen/margin_8"
                android:textSize="@dimen/text_18"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/margin_45"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/checkboxSat"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:layout_marginLeft="@dimen/margin_8"
                android:textSize="@dimen/text_18"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/margin_45"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/checkboxSun"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:layout_marginLeft="@dimen/margin_8"
                android:textSize="@dimen/text_18"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_10"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivPhoto"
            android:src="@drawable/photo"
            android:padding="@dimen/margin_10"
            android:background="@drawable/image_background"
            android:layout_width="@dimen/margin_70"
            android:layout_marginRight="20dp"
            android:layout_height="@dimen/margin_70" />
        <ImageView
            android:id="@+id/ivAadhar"
            android:src="@drawable/aadhar"
            android:layout_width="@dimen/margin_70"
            android:padding="@dimen/margin_5"
            android:background="@drawable/image_background"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_height="@dimen/margin_70" />
        <ImageView
            android:id="@+id/ivAddressProof"
            android:background="@drawable/image_background"
            android:src="@drawable/id_card"
            android:padding="@dimen/margin_5"
            android:layout_width="@dimen/margin_70"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_height="@dimen/margin_70" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_15"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btPAdd"
            android:text="@string/add"
            android:textAllCaps="false"
            android:paddingLeft="@dimen/margin_35"
            android:paddingStart="@dimen/margin_35"
            android:paddingEnd="@dimen/margin_35"
            android:paddingRight="@dimen/margin_35"
            android:background="@drawable/editstore_edit_button"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_22"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btAddPCancel"
            android:text="@string/cancel"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginStart="@dimen/margin_5"
            android:textAllCaps="false"
            android:textSize="@dimen/text_22"
            android:paddingLeft="@dimen/margin_20"
            android:paddingStart="@dimen/margin_20"
            android:paddingEnd="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/editstore_cancel_button"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>