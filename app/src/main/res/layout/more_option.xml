<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/margin_10">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:text="@string/store"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_18" />

    <TextView
        android:id="@+id/tvPromoter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_10"
        android:onClick="onPromotersClick"
        android:layout_marginBottom="@dimen/margin_10"
        android:text="@string/promoters"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_18" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:text="@string/leaves"
        android:onClick="onLeavesClick"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_18" />

    <TextView
        android:id="@+id/tvLeaveRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/margin_10"
        android:padding="@dimen/margin_10"
        android:text="@string/contact_support"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_18" />
        <TextView
            android:id="@+id/tvMyAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_10"
            android:padding="@dimen/margin_10"
            android:text="@string/my_account"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_18" />
        <TextView
            android:id="@+id/tvChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_10"
            android:padding="@dimen/margin_10"
            android:text="@string/change_password"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_18" />

    <TextView
        android:id="@+id/tvLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_10"
        android:text="@string/log_off"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_18" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
